{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "StorageAccountName": {
            "type": "string",
            "metadata": {
              "description": "Name of the storage account"
            }
        },
        "AppServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "Name of the App Service Plan"
            }
        },
        "existingAppServicePlanID": {
            "type": "string",
            "metadata": {
                "description": "Provide the AppServicePlan ID of an existing App Service Plan. Keep default value 'none' if you want to create a new one."
            },
            "defaultValue": "none"
        },        
        "appServiceName": {
            "type": "string",
            "metadata": {
                "description": "Name of SCEPman's app service"
            }
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Name of the key vault"
            }
        },
        "OrgName": {
            "type": "string",
            "metadata": {
                "description": "Name of company or organization for certificate subject"
            }
        },
        "license": {
            "type": "string",
            "defaultValue": "trial",
            "metadata": {
                "description": "License Key for SCEPman"
            }
        },
        "WebsiteArtifactsUri": {
            "type": "string",
            "metadata": {
                "description": "The full URI where SCEPman artifact binaries are stored"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Resource Group"
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2021-02-01",
            "type": "Microsoft.Web/sites",
            "name": "[parameters('appServiceName')]",
            "location": "[parameters('location')]",
            "properties": {
                "serverFarmId": "[if(equals(parameters('existingAppServicePlanID'), 'none'), resourceId('Microsoft.Web/serverfarms', parameters('AppServicePlanName')), parameters('existingAppServicePlanID'))]",
                "httpsOnly": false,
                "clientAffinityEnabled": false,
                "siteConfig": {
                    "alwaysOn": true,
                    "use32BitWorkerProcess": false,
                    "ftpsState": "Disabled",
                    "appSettings": [
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "[parameters('WebsiteArtifactsUri')]"
                        },
                        {
                            "name": "AppConfig:BaseUrl",
                            "value": "[concat('https://',parameters('appServiceName'),'.azurewebsites.net')]"
                        },
                        {
                            "name": "AppConfig:LicenseKey",
                            "value": "[parameters('license')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:TenantId",
                            "value": "[subscription().tenantId]"
                        },
                        {
                            "name": "AppConfig:UseRequestedKeyUsages",
                            "value": "true"
                        },
                        {
                            "name": "AppConfig:ValidityPeriodDays",
                            "value": "730"
                        },
                        {
                            "name": "AppConfig:IntuneValidation:ValidityPeriodDays",
                            "value": "365"
                        },                                      
						{
                            "name": "AppConfig:DirectCSRValidation:Enabled",
                            "value": "true"
                        },
						{
                            "name": "AppConfig:IntuneValidation:DeviceDirectory",
                            "value": "Intune"
                        },                        
                        {
                            "name": "AppConfig:KeyVaultConfig:KeyVaultURL",
                            "value": "[reference(resourceid('Microsoft.KeyVault/vaults/', parameters('keyVaultName')), '2021-10-01', 'Full').properties.vaultUri]"
                        },
                        {
                          "name": "AppConfig:CertificateStorage:TableStorageEndpoint",
                          "value": "[Concat('https://',parameters('StorageAccountName'),'.table.core.windows.net')]"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:RootCertificateConfig:CertificateName",
                            "value": "SCEPman-Root-CA-V1"
                        },
                        {
                            "name": "AppConfig:ValidityClockSkewMinutes",
                            "value": "1440"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:RootCertificateConfig:Subject",
                            "value": "[concat('CN=SCEPman-Root-CA-V1, ', 'OU=',subscription().tenantId, ', ', 'O=\"', parameters('OrgName'), '\"')]"
                        }
                    ]
                }
            }
        }
    ]
}