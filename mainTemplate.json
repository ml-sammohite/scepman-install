{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "OrgName": {
      "type": "string",
      "minLength": 2,
      "metadata": {
        "description": "Name of the Company or Organization used for the Certificate Subject"
      }
    },
    "license": {
      "type": "string",
      "defaultValue": "trial",
      "metadata": {
        "description": "License Key for SCEPman"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated. Use the defaultValue if the staging location is not secured."
      },
      "defaultValue": ""
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located including a trailing '/'"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location where the resources will be deployed"
      }
    }
  },
  "variables": {
    "appSvcTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appSvcDouble.json', parameters('_artifactsLocationSasToken')))]",
    "vaultTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vault.json', parameters('_artifactsLocationSasToken')))]",
    "appConfigTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appConfig-scepman.json', parameters('_artifactsLocationSasToken')))]",
    "appConfigCertMasterTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appConfig-certmaster.json', parameters('_artifactsLocationSasToken')))]",
    "stgAccountTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/stgAccount.json', parameters('_artifactsLocationSasToken')))]",
    "AppServicePlanName": "[concat('scepman-sp-',uniquestring(resourceGroup().id))]",
    "AppServiceName": "[concat('scepman-app-',uniquestring(resourceGroup().id))]",
    "AppServiceCertMasterName": "[concat('scepman-cm-',uniquestring(resourceGroup().id))]",
    "keyVaultName": "[concat('scepmanvlt-',uniquestring(resourceGroup().id))]",
    "storageAccountName": "[concat('stgsm',uniquestring(resourceGroup().id))]" 
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "pid-a262352f-52a9-4ed9-a9ba-6a2b2478d19b",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "SCEPmanAppServices",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('appSvcTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "AppServicePlanName": {
            "value": "[variables('AppServicePlanName')]"
          },
          "appServiceName": {
            "value": "[variables('AppServiceName')]"
          },
          "appServiceName2": {
            "value": "[variables('AppServiceCertMasterName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "SCEPmanVault",
      "dependsOn": [
        "SCEPmanAppServices"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vaultTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[variables('keyVaultName')]"
          },
          "appServiceName": {
            "value": "[variables('appServiceName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "DeploymentSCEPmanConfig",
      "dependsOn": [
        "SCEPmanAppServices",
        "SCEPmanVault",
        "SCEPmanStorageAccount"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('appConfigTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "StorageAccountTableUrl": {
            "value": "[reference('SCEPmanStorageAccount').outputs.storageAccountTableUrl.value]"
          },
          "AppServicePlanName": {
            "value": "[variables('AppServicePlanName')]"
          },
          "appServiceName": {
            "value": "[variables('AppServiceName')]"
          },
          "keyVaultName": {
            "value": "[variables('keyVaultName')]"
          },
          "OrgName": {
            "value": "[parameters('OrgName')]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "license": {
            "value": "[parameters('license')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "DeploymentCertMasterConfig",
      "dependsOn": [
        "SCEPmanAppServices",
        "SCEPmanStorageAccount"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('appConfigCertMasterTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "AppServicePlanName": {
            "value": "[variables('AppServicePlanName')]"
          },
          "existingAppServicePlanID": {
            "value": "[parameters('existingAppServicePlanID')]"
          },
          "appServiceName": {
            "value": "[variables('AppServiceCertMasterName')]"
          },
          "scepmanUrl": {
            "value": "[reference('SCEPmanAppServices').outputs.scepmanURL.value]"
          },
          "StorageAccountTableUrl": {
            "value": "[reference('SCEPmanStorageAccount').outputs.storageAccountTableUrl.value]"
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          },
          "_artifactsLocation": {
            "value": "[variables('_artifactsLocationCertMaster')]"
          },
          "location": {
            "value": "[variables('resourceGroup')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "SCEPmanStorageAccount",
      "dependsOn": [
        "SCEPmanAppServices"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('stgAccountTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "StorageAccountName": {
            "value": "[variables('storageAccountName')]"
          },
          "location": {
            "value": "[variables('resourceGroup')]"
          },
          "tableContributorPrincipals": {
            "value": [
              "[reference('SCEPmanAppServices').outputs.scepmanPrincipalID.value]",
              "[reference('SCEPmanAppServices').outputs.certmasterPrincipalID.value]"
            ]
          },
          "_artifactsLocationSasToken": {
            "value": "[parameters('_artifactsLocationSasToken')]"
          }
        }
      }
    }
  ]
}